{
  "Authentication": {
    "SecretKey": "You_Need_To_Provide_A_Longer_Secret_Key_Here",
    "TokenValidityInMinutes": 15,
    "RefreshTokenValidityInDays": 7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Persistence": {
    "ConnectionString": "Server=;Port=;Database=;Userid=;Password=;Pooling=true;MinPoolSize=1;MaxPoolSize=20;ConnectionLifeTime=15;" //строка соединения к боевому или тестовому серверу БД
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 10240,
      "MaxRequestHeaderCount": 40
    }
  },
  "IdempotencyControl": {
    "idempotencyFilterEnabled": true,
    "clientRequestIdHeader": "Idempotency-Key",
    "clientRequestCacheKeyName": "Idempotency_Keys",
    "clientRequestCacheExpirationTimeout": "24:00:00",
    "ApiRequestFilterMilliseconds": 60000
  },
  "ApiSwagger": {
    "ApiBasePath": "/api/"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "MassTransit": "Information",
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithExceptionDetails",
      "WithProcessId",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  }
}
